<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingBottom="16dp">


    <LinearLayout
        android:id="@+id/linearLayout_insider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/app_main_background"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.mercury.kron.ui.views.LockButton
            android:id="@+id/select_tg_button_1"
            style="@style/lock_button.unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="1" />

        <com.mercury.kron.ui.views.LockButton
            android:id="@+id/select_tg_button_2"
            style="@style/lock_button.unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="2" />

        <com.mercury.kron.ui.views.LockButton
            android:id="@+id/select_tg_button_3"
            style="@style/lock_button.unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="3" />

        <com.mercury.kron.ui.views.LockButton
            android:id="@+id/select_tg_button_4"
            style="@style/lock_button.unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="4" />
    </LinearLayout>


    <Button
        android:id="@+id/select_tg_ok"
        style="@style/lock_button.unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="OK" />

</LinearLayout>